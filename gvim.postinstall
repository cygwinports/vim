bindir=/usr/bin

/usr/sbin/update-alternatives \
	--install ${bindir}/vim vim ${bindir}/gvim.exe 20 \
	--slave   ${bindir}/view view ${bindir}/gvim.exe \
	--slave   ${bindir}/vimdiff vimdiff ${bindir}/gvim.exe \
	--slave   ${bindir}/rvim rvim ${bindir}/gvim.exe \
	--slave   ${bindir}/rview rview ${bindir}/gvim.exe
